<odoo>
  <data>
    <!-- explicit list view definition -->
    <!-- <img src="/module_name/static/src/img/purchase_icon.png"/> -->
    <record model="ir.ui.view" id="purchasing.form">
      <field name="name">Form Purchasing</field>
      <field name="model">purchasing.stationery</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <!-- Button Approve -->
            <button name="approve" string="Approve" type="object" groups="purchasing.role_purchasing_user"/>
            <!-- Button Print -->
            <!-- <button name="print_report" type="object" string="Print" class="oe_highlight"/> -->
            <button name="import_xls" type="object" string="Import From Excel" class="btn-primary"/>
            <button name="report" type="object" string="Print" class="oe_highlight"/>
          </header>
          <widget name="web_ribbon" title="Desember 2020" bg_color="bg-danger" attrs="{'invisible': [('code_pr', '=', True)]}"/>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button name="open" string="purchasing" type="object" class="oe_stat_button" icon="fa-archive">
              </button>
              <button name="open" string="purchasing" type="object" class="oe_stat_button" icon="fa-calendar">
              </button>
            </div>
            <div class="oe_title">
                <h1>
                    <field name="code_pr" string="PR" readonly="1" style="color:red ! important;" />
                    <!-- <field name="code_product" string="CP/" readonly="1" style="color:red ! important;" /> -->
                </h1>
            </div>
            <group>
                <group>
                    <field name="employee_id"/>
                    <field name="company_id"/>
                </group>
                <group>
                    <field name="date_planned"/>
                </group>
            </group>
            <group>
                <notebook>
                    <page string="Order Product">
                        <field name="product_id">
                            <tree editable="bottom">
                                <control>
                                  <create name="add_product_control" string="Add a product"/>
                                </control>
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="product_uom"/>
                                <field name="price_unit"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Other Information">
                        <group>
                            <field name="user_id"/>
                            <field name="payment_term_id"/>
                        </group>
                        <group>
                            <!-- <field name="date_from" widget="daterange" option="{'related_en'}/>
                            <field name="date_to"/> -->
                            <field name="notes" class="oe_inline" placeholder="Define your terms and conditions ..."/>
                        </group>
                    </page>
                </notebook>
            </group>
          <footer>
              <div class="purchasing">
                  <div id="footer_container">
                    <center>
                      <h4
                        style="color:red ! important;">
                        Odoo Custom Module <u><a href="https://www.jababeka.com/">Purchasing</a></u> V.0.0.2
                      </h4>
                    </center>
                  </div>
              </div>
          </footer>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="purchasing.list">
      <field name="name">Form Purchasing List</field>
      <field name="model">purchasing.stationery</field>
      <field name="arch" type="xml">
        <tree string="Purchasing Stationery Order Lines">
          <field name="code_pr" readonly="1"/>
          <!-- <field name="code_product" readonly="1"/> -->
          <field name="product_qty"/>
          <!-- <field name="price_unit"/> -->
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="purchasing.form_type_request">
      <field name="name">Form Request For Quotation</field>
      <field name="model">purchasing.type_request</field>
      <field name="arch" type="xml">
        <tree>
        <!-- <tree editable="bottom"> -->
          <field name="employee_id"/>
          <field name="type"/>
          <!-- <field name="company_id"/> -->
          <field name="company_name"/>          
        </tree>
      </field>
    </record>

    <!-- Menu Product -->
    <record model="ir.ui.view" id="purchasing.form_product_info">
      <field name="name">Form Product</field>
      <field name="model">purchasing.product_info</field>
      <field name="arch" type="xml">
        <tree>
          <field name="employee_id"/>
          <field name="company_id"/>
          <field name="info_product"/>
          <field name="state"/>
          <!-- <field name="info_product" on_change="onchange_info_state(info_product, state, context)"/>
          <field name="state" on_change="onchange_info_state(info_product, state, context)"/> -->
          <!-- <label for="info_product and state"/>
          <div>
            <field name="info_product" class="form_product_info"/>
            <field name="state" class="form_product_info" />
          </div> -->
        </tree>
          <!-- <field name="info_product" position="after">
              <field name="state"/>
          </field>
          <field name="info_product" attrs="{'column_invisible': [('parent.state', 'not in', ['info_product', 'done'])]}"/> -->
      </field>
    </record>

